---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
  slug: string;
  featuredImage: string | null;
}

const { title, excerpt, date, author, slug, featuredImage } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('id-ID', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/artikel/${slug}`} class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
  {featuredImage && (
    <img src={featuredImage} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">{title}</h2>
    <p class="text-gray-600 text-sm mb-3">
      Oleh {author} pada {formattedDate}
    </p>
    <div class="text-gray-700 mb-4" set:html={excerpt.length > 150 ? excerpt.substring(0, 150) + '...' : excerpt}></div>
    <span class="text-blue-600 hover:underline">Baca Selengkapnya &rarr;</span>
  </div>
</a>
