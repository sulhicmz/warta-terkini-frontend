---interface Props {
    title: string;
    body: string;
    href: string;
    imgSrc: string;
    imgAlt: string;
}

const { href, title, body, imgSrc, imgAlt } = Astro.props;
---

<a href={href} class="block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
    <img src={imgSrc} alt={imgAlt} class="w-full h-48 object-cover" />
    <div class="p-4">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h2>
        <p class="text-gray-700 dark:text-gray-300 text-base" set:html={body.substring(0, 150) + '...'}></p>
        <p class="text-blue-600 dark:text-blue-400 mt-3 font-medium hover:underline">Baca Selengkapnya</p>
    </div>
</a>